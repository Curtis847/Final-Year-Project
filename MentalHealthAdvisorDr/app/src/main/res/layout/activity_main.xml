<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context="com.messenger.practive.mentalhealthadvisordr.MainActivity"
    android:id="@+id/relativeLayout">

    <EditText
        android:id="@+id/quizNameTxt"
        android:layout_width="300dp"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentLeft="true"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="20dp"
        android:ems="10"
        android:inputType="none"
        android:text="Quiz Name" />

    <Button
        android:id="@+id/saveNameBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentRight="true"
        android:layout_alignTop="@+id/quizNameTxt"
        android:layout_toEndOf="@+id/quizNameTxt"
        android:layout_toRightOf="@+id/quizNameTxt"
        android:text="@string/saveQuizNameBtn" />

    <android.support.v7.widget.RecyclerView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:scrollbars="vertical"
        android:layout_marginTop="60dp"
        android:id="@+id/quizRec">

    </android.support.v7.widget.RecyclerView>

    <Button
        android:id="@+id/addBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_toRightOf="@+id/questionTxtField"
        android:layout_toEndOf="@id/questionTxtField"
        android:layout_alignParentBottom="true"
        android:onClick="submitChoice"
        android:text="@string/AddBtn" />

    <EditText
        android:id="@+id/questionTxtField"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_above="@+id/addBtn"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:editable="true"
        android:ems="10"
        android:hint="@string/questionTxtField"
        android:inputType="textPersonName" />

    <EditText
        android:id="@+id/answerOneTxt"
        android:layout_width="230dp"
        android:layout_height="wrap_content"
        android:layout_below="@+id/questionTxtField"
        android:layout_toLeftOf="@+id/addBtn"
        android:layout_toStartOf="@+id/addBtn"
        android:ems="10"
        android:inputType="textPersonName"
        android:text="Name" />

</RelativeLayout>
